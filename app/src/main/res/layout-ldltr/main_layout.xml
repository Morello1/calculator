<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/pirmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:hint="pirmas skaicius"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/antras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:inputType="number"
        android:hint="antras skaicius"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/ats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Result"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="35dp"
        android:textColor="@color/buttonTextColor"
        android:background="@color/buttonDefaultBackGroundColor"
        android:layout_marginBottom="10dp"
        android:onClick="clickOne"
        />

    <Button
        android:id="@+id/subtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonDefaultBackGroundColor"
        android:text="-"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="10dp"
        android:textSize="35dp"
        android:onClick="clickTwo"
        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonDefaultBackGroundColor"
        android:text="*"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="10dp"
        android:textSize="35dp"
        android:onClick="clickThree"
        />

    <Button
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonDefaultBackGroundColor"
        android:text="/"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="10dp"
        android:textSize="35dp"
        android:onClick="clickFour"
        />

</LinearLayout>